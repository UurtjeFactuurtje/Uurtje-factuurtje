{
    "ReRoutes": [
        {
            "UseServiceDiscovery": true,
            "DownstreamPathTemplate": "/{url}",
            "DownstreamScheme": "http",
            "ServiceName": "hourregistrationapi",
            "LoadBalancerOptions": {
                "Type": "RoundRobin"
            },
            "UpstreamPathTemplate": "/{url}",
            "UpstreamHttpMethod": [ "Get" ],
            "ReRoutesCaseSensitive": false
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "localhost",
        "ServiceDiscoveryProvider": {
            "Scheme": "http",
            "Host": "localhost",
            "Port": 8500,
            "Type": "PollConsul",
            "PollingInterval": 100
        }
    }
}  